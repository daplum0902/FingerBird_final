<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--封面-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:alpha="0.9"
            android:background="@drawable/demo_post_pic1"
            android:scaleType="fitCenter" />


    </FrameLayout>
    <!--申請-->
    <ImageButton
        android:id="@+id/add"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="-30dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/icon_add"
        android:foregroundGravity="left"
        android:scaleType="fitCenter" />
    <Button
        android:id="@+id/travelend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginLeft="300dp"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--圓形頭貼-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/demo_user_g" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:gravity="center_vertical"
                android:text="印度阿三"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginLeft="20dp"
                android:text="11/4"
                android:textColor="@color/gray"
                android:textSize="19sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/plaz_title"
                    android:layout_width="43dp"
                    android:layout_height="23dp"
                    android:text="地點"
                    android:textColor="@color/gray"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/plaz_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="法國/艾菲爾鐵塔"
                    android:textSize="17sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/budget_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/budget"
                    android:layout_width="43dp"
                    android:layout_height="23dp"
                    android:text="預算"
                    android:textColor="@color/gray"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/icon_cost_retaurant" />

                <TextView
                    android:id="@+id/budget_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="81,000"
                    android:textSize="17sp" />


            </LinearLayout>


            <TextView
                android:id="@+id/introduction"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/colorLightGray"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:text="不介意搭uber、可以跟我去行程表裡目前規劃的行程、玩5天、希望以後可以繼續做朋友
"
                android:textSize="15sp" />

            <!--標籤-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/type_title"
                android:layout_width="80dp"
                android:layout_height="23dp"
                android:layout_marginBottom="8dp"
                android:text="旅遊類型"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/label_type_backpacker"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/label_type_nature"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/type2_title"
                android:layout_width="80dp"
                android:layout_height="23dp"
                android:layout_marginBottom="8dp"
                android:text="徵伴類型"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/label_traveler_goodphoto"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/label_traveler_smallappetite"/>




        </LinearLayout>

        <Button
            android:id="@+id/Schedule1"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/post_schedule_style"
            android:gravity="center"
            android:padding="5dp"
            android:text="行程表1"
            android:textColor="@color/colorPrimaryDark" />


        </LinearLayout>

    </LinearLayout>

    <!--留言-->
    <fragment
        android:id="@+id/bottom_content"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginBottom="8dp"
        android:name="com.example.daplu.practice.testPostDetailBottomFragment"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />





</LinearLayout>